@model ProyectoLogin.Models.Usuario

@{
    ViewData["Title"] = "Reactivar Usuario";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h2 class="card-title">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <h4>¿Estás seguro de que deseas reactivar este usuario?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NombreUsuario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NombreUsuario)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Correo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Correo)
                </dd>
            </dl>

            <form asp-action="ReactivateConfirmed" method="post">
                <input type="hidden" asp-for="IdUsuario" />
                <button type="submit" class="btn btn-success">Reactivar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
