@model ProyectoLogin.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="IdUsuario" />
                <div class="mb-3">
                    <label asp-for="NombreUsuario" class="form-label"></label>
                    <input asp-for="NombreUsuario" class="form-control" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Correo" class="form-label"></label>
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Clave" class="form-label"></label>
                    <input asp-for="Clave" type="password" class="form-control" />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
